{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Output schema for icetrust project - [github.com/nightwatchcybersecurity/icetrust]",
  "required": [
    "name",
    "url",
    "timestamp",
    "filename_url",
    "verification_mode",
    "verified",
    "output"
  ],
  "properties": {
    "name": { "type": "string", "title": "Name of the project/tool being verified"
     },
    "url": {
      "type": "string",
      "format": "url",
      "title": "Project URL",
      "pattern": "^https://(.*)$"
     },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "title": "Timestamp when verification was ran"
     },
    "filename_url": {
      "type": "string",
      "format": "uri",
      "title": "File URL to be checked",
      "pattern": "^https://(.*)$"
     },
    "verification_mode": {
      "type": "string",
      "enum": [
        "compare_files",
        "checksum",
        "checksumfile",
        "pgp",
        "pgpchecksumfile"
      ],
      "title": "Verification mode used"
     },
    "verified": {
      "type": "boolean",
      "title": "Whether verification was successful or not"
     },
    "output": {
      "type": "string",
      "title": "Output/logs of the verification process"
     }
  }
}